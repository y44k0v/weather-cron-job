# log file
touch rx_poc.log
# header
header=$(echo -e "year\tmonth\tday\tob_temp\tfc_temp")
echo $header > rx_poc.log
# script
touch rx_poc.sh
chmod u+x rx_poc.sh
echo '#!/bin/bash' > rx_poc.sh
# location
city_name="thornhill"
echo $city_name >> rx_poc.sh
# weather data
curl -s wttr.in/$city_name?T --output weather_report 

# check date format
date -u

# create cron job
crontab -e
0 8 * * * .../weather_cron_job/rx_poc.sh